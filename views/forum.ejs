<%- include('bootheader') -%>
<%- include('menubar') -%>

<form method="post" action="/addToForum">
  Topic: 
  <select name="topic">
   <option>school</option>
   <option>home</option>
  </select>
  Your message: <input type="text" name="message"><br>
  <input type="submit">
</form>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>user</th><th>topic</th><th>message</th>
    </tr>
  </thead>
  <tbody>

<% posts.forEach(x => {%> 
  
  <tr>
           <td><%= x.username %></td> 
           <td><%= x.topic %></td>
           <td><%= x.message %></td>
           
  </tr>
  
<% }) %>
  </tbody>
</table>

<pre>
 <%= JSON.stringify(posts,null,2) %>
</pre>

<%- include('bootfooter') -%>
