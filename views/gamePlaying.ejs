<%- include('bootheader') -%>
<%- include('menubar') -%>
<h1>
  Play the game
</h1>
Type in your move and hit submit! <br>
<%= new Date() %><br>
<form method="post" action="/playingGame">
  <input type="hidden" name="gamePIN" value="<%= gamePIN %>"><br>
  Your move: <input type="text" name="answer"><br>
  
  <input type="submit">
</form>
<hr>
<% if (isAdmin) {%> 
<h4>
  Administrator Controls:
</h4>
<% players.forEach( x => {%> 
  <hr>
  <%= x.username %>: <%= x.answer %>
  <form method="post" action="/sendPrivateMessage">
    <input type="hidden" name="user" value="<%= x.username %>">
    <input type="hidden" name="gamePIN" value="<%= x.gamePIN %>">
    message: <input type="text" name="privateMessage"><br>
    <input type="submit">
  </form>
   <!--  have a form for selecting a user as a detective, doctor, mafia -->
<% }) %>

<% } %>
<%- include('bootfooter') -%>
