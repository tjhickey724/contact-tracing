<%- include('bootheader') -%>
<%- include('menubar') -%>

    <div class="jumbotron">
        <h1>Login to the Authentication Demo </h1>
        <p> You must login to see your profile </p>
        <a class="btn btn-danger" href="/auth/google">
            <span class="fa fa-google-plus"> Google</span>
        </a>
    </div>

    <div class="row">
      
        <div class="col-sm-5">
            <h2>Login</h2>
            <form method="post" action="/login">
                username: <input type="text"
                                 autocomplete="username"
                                 name="username"><br>
                passphrase: <input  type="password"
                                    autocomplete="passphrase"
                                    name="passphrase"><br>
                <input type="submit">
            </form>
        </div>
      
        <div class="col-sm-2" style="text-align:center">
            OR
        </div>
      
        <div class="col-sm-5">
            <h2>Signup</h2>
            <form method="post" action="/signup">
                username: <input type="text" autocomplete="username" name="username"><br>
                passphrase (at least five words long):
                   <input type="password" autocomplete="passphrase" name="passphrase"><br>
                confirm passphrase:
                    <input type="password" name="passphrase2"><br>
              
                age: <input type="number" name="age"><br>
              
              
                <input type="submit">
            </form>
        </div>
    </div>


<%- include('bootfooter') -%>
